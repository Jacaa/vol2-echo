%h1 Leagues index
= link_to "Add new league", new_league_path
%ul.list-group
  - @leagues.each do |league|
    %li.list-group-item
      - if league.owner == current_user
        = link_to league.name, league
        (#{league.description})
        >
        = link_to "Edit", edit_league_path(league)
        >
        = link_to "Delete", league_path(league), method: :delete
      - else
        = link_to league.name, league
        (#{league.description})
